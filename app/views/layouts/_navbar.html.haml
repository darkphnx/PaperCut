.navbar
  .container
    .navbar-brand
      = link_to root_path, class: 'navbar-item' do
        %span.icon.has-text-white
          %i.fas.fa-hand-scissors.fa-lg{data: {"fa-transform" => 'flip-h'}}
        %span.icon.has-text-white
          %i.fas.fa-hand-paper.fa-lg

    .navbar-end
      .navbar-item
        .buttons
          - if logged_in?
            = link_to "My Events", events_path, class: 'button is-primary'
            = link_to "Logout", logout_path, class: 'button is-primary is-inverted'
          - else
            = link_to "Login", login_path, class: 'button is-primary'
            = link_to "Register", register_path, class: 'button is-primary is-inverted'
