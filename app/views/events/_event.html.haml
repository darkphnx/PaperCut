.column.is-half
  .box
    %article.media
      %figure.media-left
        %p.image.is-64x64= image_tag rails_blob_path(event.logo), alt: "#{event.name} logo"
      .media-content
        %p.is-size-5= event.name

        %p
          - if event.cfp_open?
            %span.tag.is-info
              CFP closes
              = event.cfp_open_until.strftime("%b %d, %Y")
          - else
            %span.tag.is-danger
              CFP closed

        %p.is-size-7
          = link_to "Edit", edit_event_path(event)
          Â·
          = link_to "Delete", event_path(event), data: { method: "Delete", confirm: "Are you sure you want to delete #{event.name}" }
