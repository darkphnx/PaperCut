- page_title @submission.title
- page_subtitle "Showing the full details of this submission"

- breadcrumb "My Events", events_path
- breadcrumb "#{@event.name} Submissions", event_submissions_path(@event)
- breadcrumb @submission.title

= render @submission

- if @submission.submission_votes.exists?
  .comments.box
    - @submission.submission_votes.each do |vote|
      %article.media
        .media-left.comment-rating
          - vote.weight.times do
            .icon.has-text-warning
              %i.fas.fa-star

        .media-content
          - if vote.comment?
            .content
              = simple_format= vote.comment

          %small
            = vote.voter.email_address
            Â·
            = vote.created_at.to_s(:short)

.form-footer
  .buttons.is-right
    = form_with model: @submission, url: [@event, @submission] do |f|
      - if @submission.shortlisted?
        = f.hidden_field :shortlisted, value: false
        = f.submit "Remove from Shortlist", class: 'button is-warning'
      - else
        = f.hidden_field :shortlisted, value: true
        = f.submit "Add to Shortlist", class: 'button is-primary'

    = link_to "Delete", event_submission_path(@event, @submission), class: 'button is-danger', data: { method: :delete, confirm: "Are you sure you want to delete this submission?" }
